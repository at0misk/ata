<style type="text/css">
	.container{
		min-height: 550px;
		background-color: white;
		margin-top: 15px;
	}
	.btn-col{
		text-align: center;
	}
	.sub-header{
		display: inline-block;
		margin-left: 10px;
	}
	.header-col{
		text-align: center;
	}
	.header-row{
		color: white;
		background-color: #e84c3d;
		height: 60px;
		padding-top: 10px;
	}
	.form-row{
		margin-top: 15px;
		padding-right: 15px;
	}
	.travel-label{
		padding: 0px;
		padding-top: 7px;
	}
	@media (max-width: 788px) {
	  .form-row{
	    padding-left: 15px;
	  }
	}
	.custom-checkbox{
		text-align: center;
	}
</style>
<div class="container">
	<div class="row header-row">
		<div class="col-sm-12 header-col">
			<h4 class="sub-header">Get a Quote From <%= @page_user.first %> <%= @page_user.last %></h4>
		</div>
	</div>
	<div class="row form-row">
			<form action="/quote" method="post" class="form-horizontal" id="quote-form">
		<div class="col-sm-6" data-no-turbolinks="true">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="user_id" type="hidden" value="<%= @page_user.id %>">
			<div class="row form-row">
				<div class="form-group">
				    <label for="first-quote" class="col-sm-4 control-label">First Name</label>
				    <div class="col-sm-8">
				        <input name="first" type="text" class="form-control" id="first-quote" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="last-quote" class="col-sm-4 control-label">Last Name</label>
				    <div class="col-sm-8">
				        <input name="last" type="text" class="form-control" id="last-quote" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="airport" class="col-sm-4 control-label">Preferred Airport</label>
				    <div class="col-sm-8">
				        <input name="airport" type="text" class="form-control" id="airport" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="email-quote" class="col-sm-4 control-label">Email</label>
				    <div class="col-sm-8">
				        <input name="email" type="text" class="form-control" id="email-quote" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="phone" class="col-sm-4 control-label">Phone Number</label>
				    <div class="col-sm-8">
				        <input name="phone" type="text" class="form-control" id="phone" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="destination" class="col-sm-4 control-label">Destination</label>
				    <div class="col-sm-8">
				        <input name="destination" type="text" class="form-control" id="destination" required/>
				    </div>
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="row form-row">
				<div class="form-group">
				    <label for="departure" class="col-sm-4 control-label">Departure Date</label>
				    <div class="col-sm-8">
				        <input name="departure" type="date" class="form-control" id="departure" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="return" class="col-sm-4 control-label">Return Date</label>
				    <div class="col-sm-8">
				        <input name="return" type="date" class="form-control" id="return" required/>
				    </div>
				</div>
			</div>
			<div class="row form-row">
				<label for="travelers" class="col-sm-4 control-label">Travelers</label>
				<div class="col-sm-8">
					<div class="form-group col-sm-6">
					    <label for="adults" class="col-sm-4 control-label travel-label">Adults</label>
					    <div class="col-sm-8">
					        <input name="adults" type="number" class="form-control" id="adults" min="1" placeholder="1" value="1"/>
				    </div>
				</div>
				<div class="form-group col-sm-6">
					    <label for="children" class="col-sm-4 control-label travel-label">Children</label>
					    <div class="col-sm-8">
					        <input name="children" type="number" class="form-control" id="children" min="0" placeholder="0" value="0"/>
					    </div>
					</div>
				</div>
			</div>
			<div class="row form-row">
				<div class="form-group">
				    <label for="comments" class="col-sm-4 control-label">Comments</label>
				    <div class="col-sm-8">
				        <textarea rows="8" name="comments" class="form-control" id="comments"></textarea>
				    </div>
				</div>
			</div>
			<div class="col-sm-4">
			</div>
	      <label class="custom-control custom-checkbox form-group col-sm-8">
	        <input type="checkbox" name="subscribe" class="custom-control-input" checked>
	        <span class="custom-control-indicator"></span>
	        <span class="custom-control-description">Contact me about specials</span>
	      </label>
			<div class="row form-row">
				<div class="form-group">
					<div class="col-sm-4">
					</div>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-red">Get Quote</button>
				    </div>
				</div>
			</div>
		</div>
		</form>
			<% if flash[:sub] %>
				<div class="row">
					<div class="col-sm-4">
					</div>
					<div class="col-sm-6">
						<h4><%= flash[:sub] %></h4>
					</div>
				</div>
				<% flash[:sub] = nil %>
			<% end %>
		</div>
		<div class="col-sm-6">
		</div>
	</div>

<script type="text/javascript">
  $(document).on('turbolinks:load',function(){

	    $('#quote-form').validate({
		      rules: {
		        'phone': {
		          digits: true
		        },
		        'email': {
		        	email: true
		        }
		      },
	          highlight: function (element) {
	              $(element).closest('.form-group').removeClass('has-success').addClass('has-error');
	          },
	          success: function (element) {
	              element.closest('.form-group').removeClass('has-error').addClass('has-success');
	          }
		 });

  });

</script>