<style type="text/css">
	.form-header{
		text-align: center;
		margin-bottom: 20px;
		margin-top: 20px;
	}
	.btn-col{
		text-align: center;
	}
	.form-col{
		background-color: white;
		margin-top: 15px;
	}
	form .row{
		padding-right: 15px;
		padding-left: 15px;
	}
	.reg-error{
		text-align: center;
	}
	.container{
		min-height: 525px;
	}
	.top-row{
		margin-top: 50px;
	}
</style>
<div class="container">
	<div class="row top-row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6 form-col">
			<div class="row">
				<div class="col-sm-12">
					<h4 class="form-header">Agent Registration</h4>
					<% if flash[:errors] %>
					<p class="red reg-error"><%= flash[:errors] %></p>
					<% end %>
				</div>
			</div>
			<form id="reg-form" action="/users" method="post" class="form-horizontal" enctype="multipart/form-data">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<div class="row">
				<div class="form-group">
				    <label for="id" class="col-sm-3 control-label">Evolution ID</label>
				    <div class="col-sm-8">
				        <input name="id" type="number" class="form-control" id="id" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <div class="col-sm-12 btn-col">
				        <button class="btn btn-contact">Register</button>
				    </div>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).on('turbolinks:load',function(){
		$('#reg-form').validate({
			rules: {
				'id': {
					required: true
				}
			},
	        highlight: function (element) {
	            $(element).closest('.form-group').removeClass('has-success').addClass('has-error');
	        },
	        success: function (element) {
	            element.closest('.form-group').removeClass('has-error').addClass('has-success');
	        }
		});
	})
</script>