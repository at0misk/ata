<style type="text/css">
	.form-header{
		text-align: center;
		margin-bottom: 20px;
	}
	.btn-col{
		text-align: center;
	}
	.form-col{
		background-color: white;
		margin-top: 15px;
	}
	form .row{
		padding-right: 15px;
	}
	.reg-error{
		text-align: center;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6 form-col">
			<div class="row">
				<div class="col-sm-4">
				</div>
				<div class="col-sm-8">
					<h3 class="form-header">Register</h3>
					<% if flash[:errors] %>
					<p class="red reg-error"><%= flash[:errors] %></p>
					<% end %>
				</div>
			</div>
			<form id="reg-form" action="/users" method="post" class="form-horizontal" enctype="multipart/form-data">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<div class="row">
				<div class="form-group">
				    <label for="first" class="col-sm-4 control-label">First Name</label>
				    <div class="col-sm-8">
				        <input name="user[first]" type="text" class="form-control" id="first" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="last" class="col-sm-4 control-label">Last Name</label>
				    <div class="col-sm-8">
				        <input name="user[last]" type="text" class="form-control" id="last" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="email" class="col-sm-4 control-label">Email</label>
				    <div class="col-sm-8">
				        <input name="user[email]" type="text" class="form-control" id="email" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="username" class="col-sm-4 control-label">Username</label>
				    <div class="col-sm-8">
				        <input name="user[username]" type="text" class="form-control" id="username" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="phone_number" class="col-sm-4 control-label">Phone Number</label>
				    <div class="col-sm-8">
				        <input name="user[phone_number]" type="text" class="form-control" id="phone_number" required/>
				    </div>
				</div>
			</div>
			  <div class="form-group">
			    <label for="exampleInputFile" class="col-sm-4 control-label">Photo</label>
			    <div class="col-sm-8">
			    	<input name="user[avatar]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp" required>
			    </div>
			  </div>
			<div class="row">
				<div class="form-group">
				    <label for="about" class="col-sm-4 control-label">About Me:</label>
				    <div class="col-sm-8">
				    	<textarea name="user[about]" class="form-control" id="about" rows="6" required></textarea>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="password" class="col-sm-4 control-label">Password</label>
				    <div class="col-sm-8">
				        <input name="user[password]" type="password" class="form-control" id="password" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="password_confirmation" class="col-sm-4 control-label">Password Confirmation</label>
				    <div class="col-sm-8">
				        <input name="user[password_confirmation]" type="password" class="form-control" id="password_confirmation" required/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="submit" class="col-sm-4 control-label"></label>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-contact">Register</button>
				    </div>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).on('turbolinks:load',function(){
		$('#reg-form').validate({
			rules: {
				'user[email]': {
					email: true
				},
				'user[phone_number]': {
					digits: true
				},
				'user[password_confirmation]': {
					equalTo: '#password'
				}
			},
	        highlight: function (element) {
	            $(element).closest('.form-group').removeClass('has-success').addClass('has-error');
	        },
	        success: function (element) {
	            element.closest('.form-group').removeClass('has-error').addClass('has-success');
	        }
		});
	})
</script>