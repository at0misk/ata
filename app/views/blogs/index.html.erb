<style type="text/css">
	.container{
		min-height: 600px;
		margin-top: 15px;
		background-color: white;
	}
	.blog-header{
		display: inline-block;
		margin-left: 10px;
	}
	.header-col{
		text-align: center;
	}
	.header-row{
		color: white;
		background-color: #eba10a;
		height: 60px;
		padding-top: 10px;
	}
	.blog-box{
		height: 300px;
		border: 1px solid #cccccc;
		margin: 2%;
		width: 29.3%;
		padding: 0px;
		/*background-color: #f1f1f1;*/
	}
	.img-fluid{
		width: 100%;
		height: auto;
		border-bottom: 1px solid #cccccc;
		min-height: 251.88px;
		-moz-transition: all 0.4s;
		-webkit-transition: all 0.4s;
		transition: all 0.4s;
	}
	.img-fluid:hover{
		opacity: 0.7;
	}
	.blog-title{
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		padding: 0px 2%;
	    height: 46px;
	    background: #f1f1f1;
	    margin: 0px;
	    padding-top: 4%;
	    vertical-align: top;
		-moz-transition: all 0.4s;
		-webkit-transition: all 0.4s;
		transition: all 0.4s;
	}
	.content a{
		color: black;
	}
	.content a:hover{
		color: black;
		text-decoration: none;
	}
	.hover-blog{
		background-color: white !important;
	}
</style>
<div class="container">
	<div class="row header-row">
		<div class="col-sm-12 header-col">
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><h4 class="blog-header">TRAVEL BLOG</h4>
		</div>
	</div>
	<div class="row content">
		<a href="/blogs/11"><div class="col-sm-4 blog-box">
			<%= image_tag('packing', :class => 'img-fluid') %>
			<h4 class="blog-title">WHAT TO PACK ON AN INTERNATIONAL TRIP</h4>
		</div></a>
		<a href="#"><div class="col-sm-4 blog-box">
			<%= image_tag('golden', :class => 'img-fluid') %>
			<h4 class="blog-title">GOLDEN ANNIVERSARY TRAVEL IDEAS</h4>
		</div></a>
		<a href="#"><div class="col-sm-4 blog-box">
			<%= image_tag('athens', :class => 'img-fluid') %>
			<h4 class="blog-title">3 DAYS IN ATHENS: WHAT TO DO WHEN YOU GO</h4>
		</div></a>
	</div>
	<div class="row content">
		<a href="#"><div class="col-sm-4 blog-box">
			<%= image_tag('zipline', :class => 'img-fluid') %>
			<h4 class="blog-title">ZIP LINING IN PLAYA DEL CARMEN MEXICO</h4>
		</div></a>
		<a href="#"><div class="col-sm-4 blog-box">
			<%= image_tag('sicily.png', :class => 'img-fluid') %>
			<h4 class="blog-title">VISIT RAGUSA, SICILY</h4>
		</div></a>
		<a href="#"><div class="col-sm-4 blog-box">
			<%= image_tag('bahamas', :class => 'img-fluid') %>
			<h4 class="blog-title">TOP 10 BAHAMAS EXPERIENCES</h4>
		</div></a>
	</div>
</div>

<script type="text/javascript">
	$(document).on('turbolinks:load',function(){

	$('.blog-box').hover(
	  function() {
	  	console.log('hovering');
	    // var arrowCol = $( this ).closest('.arrow-col');
	    $(this).children('h4').addClass('hover-blog');
	  }, function() {
	    $(this).children('h4').removeClass('hover-blog');
	  }
	);

});
</script>