<style type="text/css">
	.btn-col{
		text-align: right;
	}
	.errors{
		text-align: center;
		color: red;
		margin-top: 15px;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<div class="col-sm-4">
			</div>
			<div class="col-sm-8">
				<h4>New Blog Post</h4>
			</div>
			<!-- <h5>New Blog Post:</h5> -->
			<form action="/blogs" method="post" class="form-horizontal" enctype="multipart/form-data">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="blog[user_id]" type="hidden" value="<%= @user.id %>">
			<div class="row">
				<div class="form-group">
				    <label for="title" class="col-sm-4 control-label">Title</label>
				    <div class="col-sm-8">
				        <input name="blog[title]" type="text" class="form-control" id="title" />
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="title" class="col-sm-4 control-label">Author</label>
				    <div class="col-sm-8">
				        <input name="blog[author]" type="text" class="form-control" id="title" />
				    </div>
				</div>
			</div>
			<div class="form-group photo-group">
			    <label for="inputFile" class="col-sm-4 control-label">Image</label>
			    <div class="col-sm-8">
			    	<input name="blog[image]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
			    </div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="content" class="col-sm-4 control-label">Post:</label>
				    <div class="col-sm-8">
				    	<textarea name="blog[content]" class="form-control" id="content" rows="20"></textarea>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="submit" class="col-sm-4 control-label"></label>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-contact">CREATE</button>
				    </div>
				</div>
			</div>
			</form>
		</div>
		<div class="col-sm-6 errors">
			<% if flash[:errors] %>
				<% flash[:errors].each do |val| %>
					<p><%= val %></p>
				<% end %>
			<% end %>
		</div>
	</div>
</div>