<style type="text/css">
	small{
		margin-left: 2%;
	}
	.blog-cont{
		min-height: 600px;
		margin-top: 15px;
		background-color: white;
	}
	.blog-header{
		display: inline-block;
		margin-left: 10px;
	}
	.header-col{
		text-align: center;
	}
	.header-row{
		color: white;
		background-color: #eba10a;
		height: 60px;
		padding-top: 10px;
	}
	.img-col{
		padding: 0px;
	}
	.header-text{
		padding: 2% 3%;
	}
	.big-header{
		margin-top: 0px;
	}
	.header-text img{
		width: 50%;
		height: auto;
		float: right;
		margin-left: 2%;
	}
	p{
		text-align: justify;
	}
	.headers-div{
		display: inline-block;
	}
	.author-header{
/*		text-align: right;
    	margin-top: 0px;*/
	}
	.blog-header a{
		color: white;
	}
</style>
<div class="container blog-cont">
	<a href="/blogs"><div class="row header-row">
		<div class="col-sm-12 header-col">
			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><h4 class="blog-header">TRAVEL BLOG</h4>
		</div>
	</div></a>
	<% if @blog %>
		<div class="row img-row">
			<div class="col-sm-12 header-text">
				<div class="headers-div">
					<h3 class="big-header"><%= @blog.title.upcase %></h3>
					<h5 class="author-header">Written by <%= @blog.author %><small><%= @blog.created_at.to_time.strftime('%B %e at %l:%M %p') %></small></h5>
				</div>
				<%= image_tag(@blog.image.url, :class => 'img-fluid') %>
				<%= simple_format(@blog.content) %>
			</div>
		</div>
	<% end %>
</div>