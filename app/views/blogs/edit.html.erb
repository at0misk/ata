<style type="text/css">
	.btn-danger{
		float: right;
		margin-bottom: 2%;
	}
</style>
<div class="container">
	<div class="row">
		<% @blogs.each do |val| %>
		<div class="col-sm-6">
			<div class="row">
			<form action="/blogs/destroy" method="POST" data-remote="true" class="chatBoxForm">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input type="hidden" name="id" value="<%= val.id %>">
				<button class="btn btn-danger" data-confirm="Delete Post?">X</button>
			</form>
			</div>
			<form action="/blogs/<%= val.id %>" method="post" class="form-horizontal">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="_method" value="PATCH" type="hidden">
			<input name="blog[user_id]" type="hidden" value="<%= val.user.id %>">
			<div class="row">
				<div class="form-group">
				    <label for="title" class="col-sm-4 control-label">Title</label>
				    <div class="col-sm-8">
				        <input name="blog[title]" type="text" class="form-control" id="title" value="<%= val.title %>" />
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="content" class="col-sm-4 control-label">Post:</label>
				    <div class="col-sm-8">
				    	<textarea name="blog[content]" class="form-control" id="content" rows="15"><%= val.content %></textarea>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="submit" class="col-sm-4 control-label"></label>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-primary">Edit</button>
				    </div>
				</div>
			</div>
			</form>
		</div>
		<% end %>
	</div>
</div>