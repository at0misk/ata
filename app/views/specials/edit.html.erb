<style type="text/css">
	.btn-col{
		text-align: right;
	}
	.img-div img{
		height: auto;
		width: 100%;
	}
</style>
<div class="container">
	<div class="row">
	<% @specials.each do |val| %>
		<div class="col-sm-6">
			<div class="col-sm-4">
			</div>
			<div class="col-sm-8">
				<h4 class="header">List a new special</h4>
			</div>
			<form action="/specials" method="post" class="form-horizontal" enctype="multipart/form-data">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="id" value="<%= val.id %>" type="hidden">
			<input name="_method" value="PATCH" type="hidden">
			<input name="special[user_id]" type="hidden" value="<%= @user.id %>">
			<div class="row">
				<div class="form-group">
				    <label for="title" class="col-sm-4 control-label">Title</label>
				    <div class="col-sm-8">
				        <input name="special[title]" type="text" class="form-control" id="title" value="<%= val.title %>"/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="departure" class="col-sm-4 control-label">Depart</label>
				    <div class="col-sm-8">
				        <input name="special[depart]" type="date" class="form-control" id="departure" min="<%= Date.today %>" value="<%= val.depart %>"/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="return" class="col-sm-4 control-label">Return</label>
				    <div class="col-sm-8">
				        <input name="special[return]" type="date" class="form-control" id="return" value="<%= val.return %>"/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="vacancy" class="col-sm-4 control-label">Vacancy</label>
				    <div class="col-sm-8">
				        <input name="special[vacancy]" type="number" class="form-control" id="vacancy" min="0" value="<%= val.vacancy %>"/>
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="description" class="col-sm-4 control-label">Description</label>
				    <div class="col-sm-8">
				        <input name="special[description]" type="text" class="form-control" id="description" value="<%= val.description %>"/>
				    </div>
				</div>
			</div>
			<div class="col-sm-4">
			</div>
			<div class="col-sm-8 img-div">
				<%= image_tag(val.image.url) %>
			</div>
			<div class="form-group">
			    <label for="exampleInputFile" class="col-sm-4 control-label">Photo</label>
			    <div class="col-sm-8">
			    	<input name="special[image]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
			    </div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="submit" class="col-sm-4 control-label"></label>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-primary">Update</button>
				    </div>
				</div>
			</div>
			</form>
			<% if flash[:sub] %>
				<div class="row">
					<div class="col-sm-4">
					</div>
					<div class="col-sm-6">
						<h4><%= flash[:sub] %></h4>
					</div>
				</div>
				<% flash[:sub] = nil %>
			<% end %>
		</div>
		<% end %>
	</div>
</div>