<style type="text/css">
  .admin-login-cont{
    min-height: 550px;
    margin-top: 15px;
  }
  .form-body{
    background-color: white;
  }
  .header-col{
    padding: 0px;
  }
</style>
<div class="container admin-login-cont"> 
  <div class="row">   
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6 header-col">
      <div class="modal-header">
        <span class="glyphicon glyphicon-comment" aria-hidden="true"></span><h3 class="modal-title modalh3" id="loginModalLabel">Password Recovery</h3>
      </div>
    </div>
    <div class="col-sm-3">
    </div>
  </div>
    <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-6 form-body">
        <div class="modal-body">
        <form action="/recover" method="post" class="form-horizontal" id="login-form">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row form-row-login">
          <div class="form-group">
              <label for="email" class="col-sm-3 control-label">Email</label>
              <div class="col-sm-6">
                  <input name="email" type="text" class="form-control" id="email-login" required/>
              </div>
          </div>
        </div>
        <div class="row form-row-login">
          <div class="form-group">
              <label for="submit" class="col-sm-3 control-label"></label>
              <div class="col-sm-6 btn-col btn-col-login">
                  <button class="btn btn-contact">Submit</button>
              </div>
          </div>
        </div>
        </form>
        </div>
  <!--       <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div> -->
      </div>
      <div class="col-sm-3">
      </div>
    </div>
</div>