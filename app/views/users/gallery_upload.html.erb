	.btn-col{
		text-align: center;
	}
	.header{
		text-align: center;
	}
	.photo-group{
		/*text-align: center;*/
		margin-top: 25px;
	}
	.btn-sm{
		/*display: inline-block;*/
		margin-left: 15px;
	}
	#inputFile{
		/*display: inline-block;*/
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-6">
			<h3 class="header">Upload photos to <%= @page_user.first %> <%= @page_user.last %>'s gallery:</h3>
				<form action="/gallery_upload" method="post" class="form-horizontal" enctype="multipart/form-data">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input name="photo[user_id]" type="hidden" value="<%= @page_user.id %>">
					<div class="form-group photo-group">
					    <label for="name" class="col-sm-3 control-label">Your Name</label>
					    <div class="col-sm-8">
					    	<input name="photo[name]" type="text" class="form-control" id="name" aria-describedby="fileHelp">
					    </div>
					</div>
					<div class="form-group photo-group">
					    <label for="location" class="col-sm-3 control-label">Location</label>
					    <div class="col-sm-8">
					    	<input name="photo[location]" type="text" class="form-control" id="location" aria-describedby="fileHelp">
					    </div>
					</div>
					<div class="form-group photo-group">
					    <label for="traveled_on" class="col-sm-3 control-label">Date Taken</label>
					    <div class="col-sm-8">
					    	<input name="photo[traveled_on]" type="date" class="form-control" id="traveled_on" aria-describedby="fileHelp">
					    </div>
					</div>
					<div class="form-group photo-group">
					    <label for="inputFile" class="col-sm-3 control-label">Photo</label>
					    <div class="col-sm-8">
					    	<input name="photo[image]" type="file" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
					    </div>
					</div>
					<div class="row">
						<div class="form-group">
						    <!-- <label for="submit" class="col-sm-2 control-label"></label> -->
						    <div class="col-sm-12 btn-col">
						    	<button class="btn btn-sm btn-primary">Upload</button>
						    </div>
						</div>
					</div>
				</form>
		</div>
		<div class="col-sm-3">
		</div>
	</div>
</div>