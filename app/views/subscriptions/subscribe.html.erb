<style type="text/css">
	.header{
		text-align: right;
	}
	.btn-col{
		text-align: center;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-6" data-no-turbolinks="true">
			<h4 class="header">Subscribe to <%= @user.first %> <%= @user.last %>'s mailing list to stay up to date!</h4>
			<form action="/subscriptions" method="post" class="form-horizontal">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="subscription[user_id]" type="hidden" value="<%= @user.id %>">
			<div class="row">
				<div class="form-group">
				    <label for="email" class="col-sm-4 control-label">Email</label>
				    <div class="col-sm-8">
				        <input name="subscription[email]" type="text" class="form-control" id="email" />
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="first" class="col-sm-4 control-label">First Name</label>
				    <div class="col-sm-8">
				        <input name="subscription[first]" type="text" class="form-control" id="first" />
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="last" class="col-sm-4 control-label">Last Name</label>
				    <div class="col-sm-8">
				        <input name="subscription[last]" type="text" class="form-control" id="last" />
				    </div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
				    <label for="submit" class="col-sm-4 control-label"></label>
				    <div class="col-sm-8 btn-col">
				        <button class="btn btn-primary">Subscribe</button>
				    </div>
				</div>
			</div>
			</form>
			<% if flash[:sub] %>
				<div class="row">
					<div class="col-sm-4">
					</div>
					<div class="col-sm-6">
						<h4><%= flash[:sub] %></h4>
					</div>
				</div>
				<% flash[:sub] = nil %>
			<% end %>
		</div>
		<div class="col-sm-6">
		</div>
	</div>
</div>